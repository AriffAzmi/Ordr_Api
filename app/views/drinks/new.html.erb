<% provide(:title, 'Create Drink') %>
<h1>Create Drink</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@drink) do |f| %>
      
      <%= render 'shared/error_messages_drink'%>
    
      <%= f.label :Drink %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.submit "Create drinklist", class: "btn btn-primary" %>
      <%= button_tag "Reset", type: :reset, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>